@{
    ViewData["Title"] = "Kayýt Ol";
}

<h2 class="text-center mb-4">Kullanýcý Kaydý</h2>

<div class="register-container">
    <form id="registerForm">
        <div class="form-group">
            <label for="username">Kullanýcý Adý</label>
            <input type="text" id="username" class="form-control" placeholder="Kullanýcý adýnýzý girin" required />
        </div>

        <div class="form-group">
            <label for="email">E-posta</label>
            <input type="email" id="email" class="form-control" placeholder="E-posta adresiniz" required />
        </div>

        <div class="form-group">
            <label for="password">Þifre</label>
            <input type="password" id="password" class="form-control" placeholder="Þifrenizi girin" required />
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-3">Kayýt Ol</button>
    </form>

    <div id="result" class="mt-3 text-center"></div>
</div>

@section Scripts {
    <script src="~/js/register.js"></script>
}

